<?xml version="1.0"?>
<robot name="xbot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find xbot_bringup)/urdf/common_properties.urdf.xacro"/>
<material name="blue">
    <color rgba="0 0 .8 1"/>
  </material>
<material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>
<material name="green">
    <color rgba="0 .8 0 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="gray">
    <color rgba=".7 .7 .7 1"/>
  </material>

  <link name="base_footprint"/>
  <joint name="base_footprint_to_base" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.24"/>
      </geometry>
    </collision>
  </link>



  <link name="laser">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.045" radius="0.045"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="base_to_laser" type="fixed">
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="laser"/>
    <origin rpy="0 0 3.1416" xyz="0 0 0.17"/>
  </joint>


<link name="global_scan">
</link>
<joint name="base_link_to_global_scan" type="fixed">
  <axis rpy="0 0 0" xyz="1 0 0"/>
  <parent link="base_link"/>
  <child link="global_scan"/>
  <origin rpy="0 0 0" xyz="0.14 0 0.435"/>
</joint>

  <link name="right_wheel">
    <visual>
      <origin rpy="0 1.57075 1.57075" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.085"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_right_wheel" type="fixed">
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="0 0 0" xyz="0 -0.20 0.075"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <origin rpy="0 1.57075 1.57075" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.085"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_left_wheel" type="fixed">
    <axis rpy="0 0 0" xyz="1 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin rpy="0 0 0" xyz="0 0.20 0.075"/>
  </joint>

  <link name="frontright_omniwheel">
    <visual>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_frontright_omniwheel" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="frontright_omniwheel"/>
    <origin rpy="0 0 0" xyz="0.2 -0.1 0.005"/>
  </joint>

  <link name="frontleft_omniwheel">
    <visual>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_frontleft_omniwheel" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="frontleft_omniwheel"/>
    <origin rpy="0 0 0" xyz="0.2 0.1 0.005"/>
  </joint>

  <link name="rearright_omniwheel">
    <visual>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_rearright_omniwheel" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="rearright_omniwheel"/>
    <origin rpy="0 0 0" xyz="-0.2 -0.1 0.005"/>
  </joint>

  <link name="rearleft_omniwheel">
    <visual>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_rearleft_omniwheel" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="rearleft_omniwheel"/>
    <origin rpy="0 0 0" xyz="-0.2 .1 0.005"/>
  </joint>


<link name="platform1">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".12 .12 .77"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.2"/>
      <geometry>
        <box size=".14 .14 1.1"/>
      </geometry>
    </collision>
  </link>
  <joint name="base_to_platform1" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="platform1"/>
    <origin rpy="0 0 0" xyz="0 0 0.475"/>
  </joint>


<link name="camera_platform">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
    </visual>
</link>
<joint name="platform1_to_camera_platform" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <child link="camera_platform"/>
    <parent link="platform1"/>
    <origin rpy="0 0 0" xyz="0.10 0 0.20"/>
  </joint>


<link name="platform2">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.85" radius="0.055"/>
      </geometry>
      <material name="green"/>
    </visual>
 </link>
<joint name="platform1_to_platform2" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <parent link="platform1"/>
    <child link="platform2"/>
    <limit effort="1000.0" lower="0" upper="0.5" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
</joint>

<link name="platform3">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.055"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="platform2_to_platform3" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <parent link="platform2"/>
    <child link="platform3"/>
    <limit effort="1000.0" lower="-1.5708" upper="1.5708" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 0.485"/>
  </joint>

<link name="platform4">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".06 .02 .05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>
  <joint name="platform3_to_platform4" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="platform3"/>
    <child link="platform4"/>
    <origin rpy="0 0 0" xyz="0 0 0.085"/>
  </joint>



<link name="platform5">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".02 .08 .02"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="platform4_to_platform5" type="fixed">
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="1000.0" lower="-1.5708" upper="1.5708" velocity="0.5"/>
    <parent link="platform4"/>
    <child link="platform5"/>
    <origin rpy="0 0 0" xyz="0 0 0.035"/>
  </joint>

<xacro:include filename="./asus_xtion_pro.urdf.xacro"/>
</robot>

